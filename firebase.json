{
  "hosting": {
    "target": "vivalpoetry",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
  {
    "source": "**",
    "destination": "/index.html"
  }
],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
  }
}
